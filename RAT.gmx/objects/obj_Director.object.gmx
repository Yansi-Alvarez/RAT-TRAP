//Deleting dead ends
for (i = (grid_width_index); (i &gt;= 0); i--) {

    for (j = (grid_height_index); (j &gt;= 0); j--) {
    
        if ((ds_grid_get(grid_map, i, j)) == 1) 
        and ((ds_grid_get(grid_map, (i + 1), j)) == 0)
        and ((ds_grid_get(grid_map, i, (j + 1))) == 0)
        and ((ds_grid_get(grid_map, i, (j - 1))) == 0) {
        
            ds_grid_set(grid_map, i, j, 0);
        }
        
        if ((ds_grid_get(grid_map, i, j)) == 1) 
        and ((ds_grid_get(grid_map, i, (j + 1))) == 0)
        and ((ds_grid_get(grid_map, (i + 1), j)) == 0)
        and ((ds_grid_get(grid_map, (i - 1), j)) == 0) {
        
            ds_grid_set(grid_map, i, j, 0);
        }
    }
}

